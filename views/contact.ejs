<!DOCTYPE html>
<html lang="en">
       <%-include('./partials/head');%>
       <body class="text-center">
                    <br>
                    <div class="texr-center">
                      <h1 class="display-4">Contact us</h1>
                      <hr class="w-25 mx-auto"/>
                    </div>
           <% if (message !='') { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong><%=message%>!</strong> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
            <% } %> 
        <div class="container">
          <div class="screen">
          <div class="row">
          <div class=" mx-aut0"> 
       <form action="/contact" method="POST">
        <div class="row mb-3">
          <label for="inputText3" class="col-sm-3 col-form-label">Name</label>
          <div class="col-sm-4">
            <input name="name" type="text" class="form-control" >
          </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-4">
              <input name="email" type="email" class="form-control" id="inputEmail3">
            </div>
          </div>
        <div class="row mb-3">
          <label for="inputText3" class="col-sm-3 col-form-label">Contact No:</label>
          <div class="col-sm-4">
            <input name="number" type="text" class="form-control">
          </div>
        </div>
        <div class="row mb-3">
            <label for="inputText3" class="col-sm-3 col-form-label">message</label>
            <div class="col-sm-2">
              <textarea name="message" id="message" cols="30" rows="2"></textarea>
            </div>
        </div>
          
        
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
  </div>
</div>
</div>
           <hr>
  
  <%- include('./partials/footer.ejs'); %>

        
    </body>
</html>